---
import Fonts from "@components/Fonts.astro";
import Meta from "@components/Meta.astro";
import FrontmatterMeta from "@components/FrontmatterMeta.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    image?: string;
    date?: Date;
  };
}

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <Fonts />
    <Meta />
    <FrontmatterMeta
      defaultImage="/images/default-social-preview.png"
      {...frontmatter}
    />
  </head>
  <body class="bg-yellow-50">
    <a
      href="#_main-content"
      class="font-serif transition left-0 bg-primary text-primary-content absolute p-3 m-3 -translate-y-16 focus:translate-y-0"
      >Skip to main content</a
    >
    <div class="mx-auto max-w-screen-md px-4 font-serif overflow-x-hidden">
      <Header />
      <main id="_main-content">
        <article class="prose prose-a:underline-offset-2">
          <slot />
        </article>
      </main>
      <Footer />
    </div>
  </body>
</html>
