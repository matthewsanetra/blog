---
export interface Props {
  link: string;
  title: string;
  description: string;
  date: Date;
}

const { link, date, title, description } = Astro.props;

const stringifiedDate = date.toISOString();
const formattedDate = stringifiedDate.split("T")[0];
---

<div class="py-2">
  <div class="border-gray-500 border-l-2 px-3">
    <a href={link} class="">
      <time class="italic float-right pl-2" datetime={stringifiedDate}>
        {formattedDate}
      </time>
      <div>
        <span class="underline underline-offset-2 font-extrabold">{title}</span>
        <p class="p-0 m-0">
          {description}
        </p>
      </div>
    </a>
  </div>
</div>
